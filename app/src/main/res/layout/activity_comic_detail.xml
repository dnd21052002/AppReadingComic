<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/default_header_color"
            app:theme="@style/ToolbarColoredBackArrow"
            android:popupTheme="@style/AppTheme"
            >
        </androidx.appcompat.widget.Toolbar>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="180dp">

            <ImageView
                android:id="@+id/imgComic"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:scaleType="centerCrop"
                android:src="@drawable/a" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tvComicName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="center"
            tools:text="Comic Name" />

        <TextView
            android:id="@+id/tvContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textSize="16sp"
            tools:text="Content" />
        <TextView
            android:id="@+id/tvComments"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Bình luận của người dùng:"
            android:textSize="16sp" />

        <!-- Phần đánh giá -->
        <TextView
            android:id="@+id/tvRatingTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Đánh giá:"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp" />

        <RatingBar
            android:id="@+id/ratingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numStars="5"
            android:stepSize="1"
            android:layout_marginTop="8dp" />

        <Button
            android:id="@+id/btnSubmitRating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gửi đánh giá"
            android:layout_marginTop="8dp" />

        <!-- Phần bình luận -->
        <TextView
            android:id="@+id/tvCommentsTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bình luận:"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp" />

        <EditText
            android:id="@+id/edtComment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nhập bình luận"
            android:layout_marginTop="8dp" />

        <Button
            android:id="@+id/btnSubmitComment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gửi bình luận"
            android:layout_marginTop="8dp" />


    </LinearLayout>

</ScrollView>
